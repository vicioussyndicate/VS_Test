



  // Infowindow
#infoWindow
    color $darkColor
    .content-header
        .graphOptions
            right 0
            position absolute
    .content
        .twitterDiv
            padding 1rem
            min-width 30rem
            max-width 40rem
            margin auto
        .infoText
            margin 2rem
            line-height 140%
            .googleFormsLogo
                display inline-block
                height 3rem
            a
                display inline-block
                margin 0 auto
                img
                    height 9rem
                    display: block
        .login
            display none
            width 60%
            margin 0 auto
            margin-top 3rem
            button
                display inline-block
                &.hidden
                    display none
            #errorMsg
                color red


#ladderWindow 
    table
        background-color #fff
        //width 55rem
        margin 0 auto
        margin-top 2rem
        font-size 0.8rem
        table-layout fixed
        th
            background-color transparent
            font-weight bold
        .pivot
            font-family "Times New Roman", Georgia, Serif
            font-weight bold
            width 4.5rem
            text-align left
            overflow hidden

    table td,
    table th
        text-align center
        padding 0.2rem
        white-space nowrap
        overflow hidden
        width 2rem
        color #333
    tr:hover
        filter: brightness(85%);

    .content-header
        .ftrOptions
            position absolute
            left 0
        .graphOptions
            position absolute
            right 0
            height 1.75rem
        #plotFolder
            display none
            position absolute
            right 1rem
        #plotBtn
            display: none
    .chart
        overflow: auto

    .chart-footer
        background-color: transparent
        //color black 
        margin 0 50px 0 50px
        .legend-item
            //margin 0.15rem
            font-size: 0.8rem
            font-weight bold
            padding 0.25rem
            padding-bottom 0
            overflow hidden
            //max-height: 1.6rem
            height 1.6rem
            margin-top 0.3rem
            border-radius 5%
            &:hover
                cursor pointer
                color $darkColor !important
                background-color $accentColor !important
        


























$decklists-height = $cont-height - 2.5rem
$deckTitle-height = 2.8rem

.decklists
    display: none
    display grid 
    grid-column-gap 1.5rem
    margin-top 1.5rem
    height $decklists-height
    position relative
    .deckBox
        height $decklists-height
        position relative
        overflow-y hidden
        .deckTitle
            display inline-block
            position relative
            width 100%
            height $deckTitle-height
            line-height $deckTitle-height
            border-radius 0.2rem
            margin-top 0
            font-weight bold
            p
                margin 0rem 0.5rem
                display inline-block
                margin-top 0
                vertical-align middle
                line-height normal
            .titleHover
                opacity 0
                height $deckTitle-height
                width 12rem
                position absolute
                top 0
                line-height $deckTitle-height
                .titleHover-content
                    display inline-block
                    //padding 0.5rem 1rem 0.5rem 1rem
                    padding-left 1rem
                    padding-right 1rem
                    margin 0.15rem
                    height $deckTitle-height - 0.3rem
                    font-size 120%
                    font-weight bold
                    letter-spacing 0.9px
                    color white
                    border-radius 3%
                    vertical-align middle
                    &:hover
                        cursor pointer
                        background-color $accentColor
                        color $darkColor
                    &:active
                        background-color yellow
                        
                    
                
            &:hover
                background-color:  $darkColor !important
                p
                    opacity 0
                .titleHover
                    opacity 1
        .deckinfo
            display none
            .dustInfo
                padding 0.4rem
                font-weight bold
                display inline
            .dustImg
                display inline-block
                height 1.1rem
            .manacurve
                margin 0.5rem 3.5rem
                color $darkColor
                opacity 0.9
            .manaChart
                width 12rem
                height 8rem
            .cardtypes
                padding 0.4rem
            .author
                font-weight bold
                padding 0.4rem 0 0 0.4rem
            .timestamp
                opacity 0.5
                padding 0.4rem
            .gameplay
                font-weight bold
                color $midColor
                padding 1rem
        .decklist
            max-height 0.88*$decklists-height
            margin-top: 1rem
            margin-bottom: 1rem
            overflow-y auto
            overflow-x hidden
            background-color: white
            .card
                position relative
                font-size 1rem
                line-height 1.45rem
                .costContainer
                    position absolute
                    .hex
                        position absolute
                        font-size 140%
                        &.Basic
                            color #b3b3b3
                        &.Common
                            color #736c6c
                        &.Rare
                            color #4561ce
                        &.Epic
                            color #ac87cc
                        &.Legendary
                            color #dc9a22
                    .cost
                        color $lightColor
                        position absolute
                        padding 0.15rem 0 0 0.35rem
                .name
                    padding-left 1.5rem //0.25rem 0.1rem 0 1.7rem
                    display inline-block
                .quantity
                    right 0
                    position absolute
                    padding-left 0.25rem
                    padding-right 0.25rem
                    display inline-block
                    z-index 4
                    background-color white
                    font-size: 85%
                    color $darkColor
                    opacity: 0.9
                    height 100%
                .hoverDiv
                    position absolute
                    top 0
                    height 100%
                    width 100%
                    z-index 20
                &:hover
                    background-color:  $darkColor  
                    color: $lightColor
                &.highlighted
                    background-color:  $darkColor  
                    color: $lightColor
                &.half-highlighted
                    background-color:  #778190  
                    color: $lightColor
                    
                // &.compare
                //     .hoverDiv
                //         background-color white
                &.unique
                    .hoverDiv
                        background-color #dec69c4a
                &.semiCore
                    .hoverDiv
                        background-color transparent
                    .quantity
                        color black
                        opacity 1
                        font-weight bold
                        font-size 1rem
                &.core
                    .hoverDiv
                        background-color #ffffffe0                  
                

                    









